extends ../layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1 Characters List
                ul
                    for character in characters
                        li Name: #{character.name}
                        li Sex: #{character.sex}
                        li
                            img(src='#{character.avatar}')
                        li Level: #{character.level}
                        li #{character.xp} XP
                        li
                            form(action='/characters/#{character._id}/edit', method='post', name='updateCharacter', ,='', enctype='application/x-www-form-urlencoded')
                                input(type='hidden', value='DELETE', name='_method')
                                button(type='submit') Delete
                        li
                            a(href='/characters/#{character._id}/edit') Edit
                        li
                            a(href='/characters/#{character._id}') Show
                h3
                    a(href='/characters/new') Create new character