extends ../layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1 Edit Character
                h3
                    a(href='/characters') Characters List
                form(action='/characters/#{character._id}/edit', method='post', name='updateCharacter', enctype='application/x-www-form-urlencoded')
                    table
                        tbody
                            tr
                                td Name:
                                td
                                    input(type='text', name='name', value='#{character.name}')
                            tr
                                td Sex:
                                td
                                    if character.sex==="M"
                                        label(for='M') Male
                                        input#M(type='radio', name='sex', value='M', checked='true')
                                        label(for='F') Female
                                        input#F(type='radio', name='sex', value='F')
                                    else
                                        label(for='M') Male
                                        input#M(type='radio', name='sex', value='M')
                                        label(for='F') Female
                                        input#F(type='radio', name='sex', value='F', checked='true')
                            tr
                                input(type='hidden', value='PUT', name='_method')
                                td(colspan='2')
                                    button(type='submit') Update